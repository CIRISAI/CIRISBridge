# Constellation DNS - Auto-generated by Ansible
version: "3.8"

services:
  constellation:
    image: valeriansaliou/constellation:v1.12.0
    container_name: cirisdns
    restart: unless-stopped
    ports:
      - "53:53/udp"
      - "53:53/tcp"
      - "127.0.0.1:8080:8080"  # REST API - localhost only
    volumes:
      - ./config.cfg:/etc/constellation.cfg:ro
      - ./data/geoip:/data:ro
    depends_on:
      redis:
        condition: service_healthy
    environment:
      - RUST_LOG=info
    networks:
      - cirisdns
    healthcheck:
      test: ["CMD-SHELL", "wget -q --spider http://localhost:8080/health || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 15s

  redis:
    image: redis:7-alpine
    container_name: cirisdns-redis
    restart: unless-stopped
    volumes:
      - redis-data:/data
    command: redis-server --appendonly yes --save 300 1
    networks:
      - cirisdns
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 3

networks:
  cirisdns:
    driver: bridge

volumes:
  redis-data:
