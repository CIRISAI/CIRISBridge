# CIRISBilling - Auto-generated by Ansible
version: "3.8"

services:
  billing:
    image: {{ billing_image }}
    container_name: ciris-billing
    restart: unless-stopped
    ports:
      - "127.0.0.1:{{ billing_port }}:8000"
    env_file:
      - .env
    volumes:
      - /var/log/ciris/billing:/app/logs
    networks:
      - ciris
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    depends_on:
      - postgres

  # Reference to external postgres service
  postgres:
    external: true
    name: ciris-postgres

networks:
  ciris:
    external: true
    name: ciris-postgres_ciris
