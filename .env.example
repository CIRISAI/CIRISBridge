# CIRISBridge Environment Configuration
# Copy to .env and fill in your values
# NEVER COMMIT .env TO VERSION CONTROL

# =============================================================================
# Infrastructure Providers
# =============================================================================

# Vultr API Key
# Get from: https://my.vultr.com/settings/#settingsapi
VULTR_API_KEY=your_vultr_api_key_here

# Hetzner API Token
# Get from: https://console.hetzner.cloud/projects/YOUR_PROJECT/security/tokens
HETZNER_API_TOKEN=your_hetzner_api_token_here

# =============================================================================
# SSH Configuration
# =============================================================================

# Path to SSH private key for server access
SSH_PRIVATE_KEY_PATH=~/.ssh/cirisbridge_ed25519

# SSH public key (will be added to servers)
SSH_PUBLIC_KEY="ssh-ed25519 AAAA... your-email@example.com"

# =============================================================================
# Domain Configuration
# =============================================================================

# Primary domain (Vultr SOA)
PRIMARY_DOMAIN=ciris-services-1.ai

# Secondary domain (Hetzner SOA)
SECONDARY_DOMAIN=ciris-services-2.ai

# Admin email for SOA records
ADMIN_EMAIL=admin@ciris.ai

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL superuser password
POSTGRES_PASSWORD=generate_strong_password_here

# PostgreSQL replication user password
REPLICATION_PASSWORD=generate_strong_password_here

# Billing database admin password
BILLING_DB_PASSWORD=generate_strong_password_here

# =============================================================================
# Service Configuration
# =============================================================================

# Constellation DNS REST API token
# Generate with: openssl rand -hex 32
CONSTELLATION_API_TOKEN=generate_token_here

# JWT signing key for billing service
# Generate with: openssl rand -hex 64
JWT_SECRET_KEY=generate_secret_here

# =============================================================================
# Payment Providers
# =============================================================================

# Stripe API keys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Play service account JSON (base64 encoded)
# cat service-account.json | base64 -w0
GOOGLE_PLAY_SERVICE_ACCOUNT_B64=

# =============================================================================
# LLM Providers (for CIRISProxy)
# =============================================================================

# Together AI (primary - ZDR by default)
TOGETHER_API_KEY=

# Groq (fallback - fast inference)
GROQ_API_KEY=

# OpenRouter (fallback - model variety)
OPENROUTER_API_KEY=

# =============================================================================
# Monitoring
# =============================================================================

# External monitoring webhook (optional)
MONITORING_WEBHOOK_URL=

# Alert email addresses (comma-separated)
ALERT_EMAILS=admin@ciris.ai
